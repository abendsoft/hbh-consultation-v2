        "@swc/cli": "^0.4.1-nightly.20240914",
        "@swc/core": "^1.7.26",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^22.5.4",
