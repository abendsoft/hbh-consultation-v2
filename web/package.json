{
    "name": "shopify-app-template-node",
    "version": "1.0.0",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "start": "cross-env NODE_ENV=production node --experimental-json-modules --trace-warnings server/server.js",
        "dev": "cross-env NODE_ENV=development nodemon server/server.ts --ignore ./frontend"
    },
    "type": "module",
    "engines": {
        "node": ">=16.13.0"
    },
    "imports": {
        "#server/*": "./server/*.js",
        "#shopify/*": "./server/shopify/*.js",
        "#utils/*": "./server/utils/*.js",
        "#configs/*": "./server/configs/*.js",
        "#docs/*": "./server/docs/*",
        "#routes/*": "./server/routes/*.js",
        "#schema/*": "./server/schema/*.js",
        "#database/*": "./server/database/*.js",
        "#enum/*": "./server/enum/*.js",
        "#services/*": "./server/services/*.js",
        "#models/*": "./server/models/*.js",
        "#exceptions/*": "./server/exceptions/*.js",
        "#interfaces/*": "./server/interfaces/*.js",
        "#controllers/*": "./server/controllers/*.js",
        "#middlewares/*": "./server/middlewares/*.js",
        "#mutations/*": "./server/mutations/*.js"
