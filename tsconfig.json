{
  "include": [
    "env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "extension-frontend/entrypoints/theme.tsx",
    "extension-frontend/components/*",
    "extension-frontend/components/**/*.tsx",
    "extension-frontend/components/**/*.ts",
    "extension-frontend/components/*.tsx",
    "extension-frontend/components/*.ts",
    "web/server/configs/env.ts"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "baseUrl": ".",
    "types": ["node"]
  }
}
